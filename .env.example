#############################
# Root .env example for the whole project
# Copy to .env at repository root and fill values
# Individual services will also load their own .env if present,
# but root takes precedence (loaded first).
#############################

# ----------------------------
# Backend API
# ----------------------------
PORT=3001
OPENROUTER_API_KEY=sk-or-REPLACE_ME
# Example model; pick the one you intend to use
OPENROUTER_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct:free
OPENROUTER_TITLE=app-web-builder

# Postgres
DATABASE_URL=postgresql://user:pass@localhost:5432/app_web_builder
# PGSSL=true
# PGPOOL_MAX=10
# PGPOOL_IDLE=30000
# PG_CONNECT_TIMEOUT=5000

# ----------------------------
# Proxy
# ----------------------------
PROXY_PORT=3000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:3001

# ----------------------------
# Frontend (Vite)
# ----------------------------
VITE_BACKEND_URL=http://localhost:3001
# VITE_HMR_HOST=localhost
# VITE_HMR_PROTOCOL=ws
# VITE_HMR_PORT=5173
# VITE_HMR_CLIENT_PORT=5173

